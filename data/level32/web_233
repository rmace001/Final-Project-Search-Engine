    <div class="wrap">
     <div class="text-center">
      <h2>
       Meet Wheaton College Students
      </h2>
      <div class="subtitle">
       Real Stories From Real Students
      </div>
     </div>
     <div class="grid media--alt meet__students">
      <!-- NavObj 32 -->
