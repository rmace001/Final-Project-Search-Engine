                startDate: nextMonthFirstDay,
                endDate: nextMonthLastDay,
                autoclose: true
            });

        }

        $("#Donor_recurring").change(function () {
            if (this.checked) {
                // Display message if checked
                $("#recurring-thanks").append("<div class='well well-sm'>Thank you!  Youll receive an email confirmation today for this first gift, and your card will be charged on or around the date selected below each month.</div>");
                var date = new Date();
                var nextMonthFirstDay = new Date(date.getFullYear(), date.getMonth() + 1, 1);
                var nextMonthLastDay = new Date(date.getFullYear(), date.getMonth() + 2, 0);

                $("#recurringDate").show();

                $('#recurringStartDate').datepicker({
                    startDate: nextMonthFirstDay,
                    endDate: nextMonthLastDay,
                    autoclose: true
                });
                //$('#recurringDatepicker').mask('00/00/0000', { selectOnFocus: true });
            } else {
                $("#recurring-thanks").html("");
                $("#recurringDatepicker").val("");
                $("#recurringDate").hide();
            }
        });



