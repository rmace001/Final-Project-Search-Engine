   <script>
    //$(window).bind("onunload", function (event) {
    //    window.location.reload()
    //});

    $(document).ready(function () {
        // check to see if donor country value has been set
        var dcntry = sessionStorage.getItem('donorCountry');
        //alert("value of dcntry is: " + dcntry);
        if (!dcntry) { // if dst is undefined
            dcntry = '';
        }

        // check to see if donor state value has been set
        var dst = sessionStorage.getItem('donorState');
        //alert("value of dst is: " + dst);
        if (!dst) { // if dst is undefined
            dst = '';
        }

        // check to see if memorial country value has been set
        var mcntry = sessionStorage.getItem('memorialCountry');
        //alert("value of mcntry is: " + mcntry);
        if (!mcntry) { // if mcntry is undefined
            mcntry = '';
        }

        // check to see if donor state value has been set
        var mst = sessionStorage.getItem('memorialState');
        //alert("value of mst is: " + mst);
        if (!mst) { // if mst is undefined
            mst = '';
        }

        // check to see if recurringDatepicker has been set
        var rdpckr = sessionStorage.getItem('recurring-datepicker');
        if (!rdpckr) {
            rdpckr = '';
        }

        // check to see if EcardDatepicker has been set
        var edpckr = sessionStorage.getItem('ecard-datepicker');
        if (!edpckr) {
            edpckr = '';
        }



        //$("#giftDesignation").focus();
        //$("select:first").focus();
        $("#recurringDate").hide();
        $('.panel-heading a').on('click', function (e) {
            if ($(this).parents('.panel').children('.panel-collapse')) {
                e.preventDefault();
            }
        });

        initOnlineGiving();

        // check to see if memorial or honorary radio has been selected and if so, show panel
        if ($('input[type=radio][name=rdbMemorialHonorary]').is(':checked')) {
            $("#memorial_info_fields").show();
            $('#cRdbMemorial-remove').show();
        }

        // check to see if Other Department has been checked; show other field, if so show panel
        if ($('#Donor_giftDesignation').val() == 'Other Department or Program') {
            //alert('#Donor_giftDesignation value is:' + $('#Donor_giftDesignation').val());
            $("#otherdep").show();
            //$('#collapseThree').collapse('show');
        }

        // OPEN ACCORDION 3 IF IT HAS ANY INPUT and if USER HITS 'PAGE BACK' BUTTON

        if ($('#cRdbMemorial').is(':checked') || $('#cRdbHonor').is(':checked')) {
            //alert("it's checked");
            $('#collapseThree').collapse('show');
        }

        // If Donor Comments has a value, show if page refreshes or donor 'goes back'
        if ($('#Donor_comments').val() !== '') {
            //alert("Donor_comments is: " + $('#Donor_comments').val());
            $('#collapseFour').collapse('show');
        }

        if ('' != null && '' != "") {

            if ('' == "Other Department or Program") {
                $("#Donor_giftDesignation").val('');
                $("#otherdep").show();
                $("#Donor_otherDesignation").val("");

            } else {



                $("#Donor_giftDesignation").val('');
                $("#otherdep").hide();
            }
        }

        if ('' != null && '' != "") {

            $('#Donor_giftamount').val('');

            // remove any non-numerical characters, except periods
            $('#Donor_giftamount').val($('#Donor_giftamount').val().replace(/[^\d.]/g, ''));
            var formattedPassedAmount = $('#Donor_giftamount').val();

            // make format to have 2 numbers after decimal
            formattedPassedAmount = parseFloat(formattedPassedAmount).toFixed(2);


        }

        if ($('#Donor_giftamount').val() != "") {
            if ($('#Donor_giftamount').val() == "100.00" || $('#Donor_giftamount').val() == "100") {
                $("#amount100").addClass("active");
            }
            if ($('#Donor_giftamount').val() == "250.00" || $('#Donor_giftamount').val() == "250") {
                $("#amount250").addClass("active");
            }
            if ($('#Donor_giftamount').val() == "500.00" || $('#Donor_giftamount').val() == "500") {
                $("#amount500").addClass("active");
            }
            if ($('#Donor_giftamount').val() == "1000.00" || $('#Donor_giftamount').val() == "1000") {
                $("#amount1000").addClass("active");
            }
            if ($('#Donor_giftamount').val() != "100.00" && $('#Donor_giftamount').val() != "100" && $('#Donor_giftamount').val() != "250.00" && $('#Donor_giftamount').val() != "250" && $('#Donor_giftamount').val() != "500.00" && $('#Donor_giftamount').val() != "500" && $('#Donor_giftamount').val() != "1000.00" && $('#Donor_giftamount').val() != "1000") {
                $("#other_amount").addClass("active");
                $("#other_amount").html("<span style='float: left; margin-right:5px;'>$</span><input tabindex='14' type='text' name='otherPayment' class='currency form-control input-sm' id='cOtherPayment' size='8' value='" + formattedPassedAmount + "' maxlength='15' style='width: 95px; float: right; margin-bottom: 0 !important;'/>");
                $("#cOtherPayment").val(formattedPassedAmount);
            }
        }

        if ($('#Donor_recurring').is(':checked')) {
            $("#recurring-thanks").append("<div class='well well-sm'>Thank you!  Youll receive an email confirmation today for this first gift, and your card will be charged on or around the date selected below each month.</div>");
            $("#recurringDate").show();
        }

        if ($('input[type=radio][name=rdbMemorialHonorary]').is(':checked')) {
            $("#memorial_info_fields").show();
            $('#cRdbMemorial-remove').show();
        }


        if ($("#d_country").val() != "") {
            var c = $("#d_country").val();
            var s = $("#d_state").val();
            if (c != 'US') {
                $("#Donor_dcountry").bfhcountries({ country: c });
            }
        } else {
            $("#d_country").val("US");
            $("#Donor_dcountry").bfhcountries({ country: 'US' });
        }

        ////////////////////////////////////////////////
        // Other amount functions/states
        ///////////////////////////////////////////////


        function OtherButtonDollarMinimumCheck(){
            if ($("#cOtherPayment").val() < 1.00) {

                   $("#errorcOtherPayment").html('<label class="error">Please make your gift at least $1.</label><br />');
                        $("#cOtherPayment").addClass("error");
                        $("#cOtherPayment").focus();
                        $("#cOtherPayment").rules("add", {
                            required: true,
                            range: [1, 50000],
                            messages: {
                                required: "Please enter your gift amount.",
                                range: "Please make your gift at least $1.",
                            }
                        });

                }
        }

        function KeepOtherButtonActive(){
            $('#other_amount.btn').css("background-color", "#9D2235");
            $('#other_amount.btn > span').css( "color", "#ffffff");
        }

        function ResetOtherButton(){
            $("#other_amount").html("Other");
            $("#other_amount").removeClass("active");
            $('#other_amount.btn').css("background-color", "#ffffff");
            $('#other_amount.btn').css("border-color", "#cccccc");
            $('#other_amount.btn > span').css( "color", "#333333");
        }

        function HoverOtherButton(){
            $( "#other_amount").css( "color", "#333333" );
            $( "#other_amount" ).css( "background-color", "#ebebeb" );
            $( "#other_amount" ).css( "border-color", "#adadad" );
        }

        function DeleteInvalidCharacters(){
            $("#cOtherPayment").on("keyup", function () {
                var valid = /^[\$\d]\d{0,10}(\.\d{0,2})?$/.test(this.value),
                    val = this.value;

                if (!valid) {
                    $("#errorcOtherPayment").html('<label class="error">Invalid character.</label><br />');
                    this.value = val.substring(0, val.length - 1);
                } else {
                    $("#errorcOtherPayment").html('');
                }
            });
        }

        function BindBlurToOtherPayment(){
            $('#cOtherPayment').bind('blur', function () {
                    // Format input
                    $('.currency').formatCurrency();

                    // Make sure donation has a value
                    if ($("#cOtherPayment").val() == '') {
                        $("#errorcOtherPayment").html('<label class="error">Please make your gift at least $1.</label><br />');
                        $("#cOtherPayment").addClass("error");
                        $("#cOtherPayment").focus();
                        $("#cOtherPayment").rules("add", {
                            required: true,
                            range: [1, 50000],
                            messages: {
                                required: "Please enter your gift amount.",
                                range: "Please make your gift at least $1.",
                            }
                        });

                    } else {
                        $("#errorcOtherPayment").html('');
                        $("#cOtherPayment").rules("remove", "required", "range");
                    }


                    // Trim $ sign so we can make a decimal value comparison
                    if ($("#cOtherPayment").val().indexOf("$") !== -1) {
                        var $trimmed = $("#cOtherPayment").val().substring(1);
                        $("#cOtherPayment").val($trimmed);

                        // Make sure donation is $1.00 minimum
                        OtherButtonDollarMinimumCheck();
                    }

                    var cGiftAmount = $('#cOtherPayment').val();
                    $('input[name="Donor.giftamount"]').val($('#cOtherPayment').val());

                });

        }

        function InitializeErrorDisplay(){
            $("#errorDonor_giftamount").html('');
            $("#errorcGiftAmount").html('');
            $("#errorcOtherPayment").html('');
            $("#Donor_giftamount").rules("remove", "required");
        }

        if (formattedPassedAmount != null && formattedPassedAmount != "") {


            var specificAmountButtonClicked = 0;

            // First make sure donation is $1.00 minimum
            OtherButtonDollarMinimumCheck();



            $( "input#cOtherPayment, #other_amount").focus(function() {

                KeepOtherButtonActive();


            });



            $('input#cOtherPayment').bind('blur', function () {

                if($('#cOtherPayment').val() >= 0){

                    KeepOtherButtonActive();

                } else {

                    ResetOtherButton();

                }
                OtherButtonDollarMinimumCheck();

            });


            $("#amount100, #amount250, #amount500, #amount1000").click(function () {
                specificAmountButtonClicked = 1;
                ResetOtherButton();


                $( "#other_amount" ).hover(
                function() {

                    /* this is bootstrap default css for hover */
                    HoverOtherButton();
                    }, function() {
                    /* this is bootstrap default css for default no state */
                    ResetOtherButton();
                });


            });




            //$("#other_amount, #cOtherPayment").click(function () {  // doesn't work
            $("#other_amount").click(function () {

                // unbind the hover over function
                $('#other_amount').unbind('mouseenter mouseleave');

                $("#other_amount").addClass("active");


               // if(specificAmountButtonClicked == 1){
                    $("#other_amount").html("<span style='float: left; margin-right:5px;'>$</span><input tabindex='14' type='text' name='otherPayment' class='currency form-control input-sm' id='cOtherPayment' size='8' value='' maxlength='15' style='width: 95px; float: right; margin-bottom: 0 !important;'/>");


              /*  } else {
                    $("#other_amount").html("<span style='float: left; margin-right:5px;'>$</span><input tabindex='14' type='text' name='otherPayment' class='currency form-control input-sm' id='cOtherPayment' size='8' value='" + formattedPassedAmount + "' maxlength='15' style='width: 95px; float: right; margin-bottom: 0 !important;'/>");
                } */

                $("#cOtherPayment").focus();



                // style the button manually so a click doesn't deactivate it
                KeepOtherButtonActive();

                //turn other buttons off if they are on
                $(this).siblings().removeClass("active");


                // Delete invalid characters and show error message
                DeleteInvalidCharacters();

                BindBlurToOtherPayment();

            });



        } else { // if no amount is passed in URL -- original baseline code
            var otherAmountClicked = 0;
            $("#other_amount").click(function () {
                otherAmountClicked = 1;

                // unbind the hover over function
                $('#other_amount').unbind('mouseenter mouseleave');

                $("#other_amount").addClass("active");

                $("#other_amount").html("<span style='float: left; margin-right:5px;'>$</span><input tabindex='14' type='text' name='otherPayment' class='currency form-control input-sm' id='cOtherPayment' size='8' value='' maxlength='15' style='width: 95px; float: right; margin-bottom: 0 !important;'/>");
                $("#other_amount").button('toggle');

                // style the button manually so a click doesn't deactivate it
                KeepOtherButtonActive();

                //turn other buttons off if they are on
                $(this).siblings().removeClass("active");

                $("#cOtherPayment").focus();
                // Delete invalid characters and show error message
                DeleteInvalidCharacters();

                BindBlurToOtherPayment();


            });

            $("#amount100, #amount250, #amount500, #amount1000").click(function () {
                specificAmountButtonClicked = 1;
                ResetOtherButton();


                $( "#other_amount" ).hover(
                function() {

                    /* this is bootstrap default css for hover */
                    HoverOtherButton();
                    }, function() {
                    /* this is bootstrap default css for default no state */
                    ResetOtherButton();
                });


            });

        }




