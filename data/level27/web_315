            var nextMonthFirstDay = new Date(date.getFullYear(), date.getMonth() + 1, 1);
            var nextMonthLastDay = new Date(date.getFullYear(), date.getMonth() + 2, 0);

            $("#recurringDate").show();

            /*$('#recurringStartDate').datepicker({
                startDate: nextMonthFirstDay,
                endDate: nextMonthLastDay,
                autoclose: true
            });*/

