        //////////////////////
        // Donor Phone      //
        //////////////////////
        $("#Donor_dphone").mask("009-999-9999", { selectOnFocus: true });



        // mask phone if US is preselected
        //if ($("#Donor_dcountry").val() == 'US') {
        //    $("#d_country").val('US');
        //    $("#Donor_dphone").mask("009-999-9999");
        //}

        // Bind the memorial email field so when value is entered, errors can be cleared
        $('#Donor_dphone').bind('blur', function () {
            // regex pattern for US Zip
            var USphone_check = /^\(?([0-9]{3})\)?[-]?([0-9]{3})[-]?([0-9]{4})$/;

            if ($("#Donor_dcountry").val() == 'US') {
                // clear errors if phone is valid
                if ((USphone_check.test($("#Donor_dphone").val()) == true) && $("#Donor_dphone").val().length == 12) {
                    $("#errorDonor_dphone").html('').prev();
                    $('#Donor_dphone').removeClass("error");
                    $("#Donor_dphone").rules("remove", "regex");
                } else if ((USphone_check.test($("#Donor_dphone").val()) == false) || $("#Donor_dphone").val().length < 12) {
                    $("#errorDonor_dphone").html('<label class="error">Enter phone using format of 555-555-5555.</label><br />');
                    $("#Donor_dphone").addClass("error");

                }
            } else if ($("#Donor_dcountry").val() !== 'US') {
                $("#errorDonor_dphone").html('');
                $('#Donor_dphone').removeClass("error");
                $("#Donor_dphone").rules("remove", "regex");
            }

        }); // bind

        //alert("dstate value is: " + $("#Donor_dstate").val());


        $("#Donor_dstate").change(function () {
            $("#d_state").val(this.value);
            sessionStorage.setItem('donorState', this.value);
            var dst = sessionStorage.getItem('donorState');
            //alert("value of dst is: " + dst);

            if (dst !== "" || dst !== NULL) {
                $('#Donor_dstate').removeClass("error");
                $("#errorDonor_dstate").html('');

            } else {
                $('#Donor_dstate').addClass("error");
                $("#errorDonor_dstate").html('<label class="error">This field is required.</label><br />');
            }

        });

        //////////////////////
        // Donor Country field
        /////////////////////
        $("#Donor_dcountry").change(function () {

            $("#d_country").val(this.value);
            sessionStorage.setItem('donorCountry', this.value);
            var dcntry = sessionStorage.getItem('donorCountry');
            //alert("value of dcntry is: " + dcntry);
            var length = $('#Donor_dstate > option').length;
            //alert("value of dstate options is: " + length);

            if (length > 1) {
                $('#Donor_dstate').addClass("error");
                $("#errorDonor_dstate").html('<label class="error">This field is required.</label><br />');
            } else if (length <= 1) {
                $('#Donor_dstate').removeClass("error");
                $("#errorDonor_dstate").html('');

            }

            if (this.value == 'US') {
                $("#Donor_dphone").mask("009-999-9999")
                //////////////////////
                // Donor ZIP field
                /////////////////////
                $('#Donor_dzip').rules("add", {
                    regex: /^\d{5}(?:[-\s]\d{4})?$/,
                    messages: {
                        regex: "Please enter US ZIP in 5 or 9 digit format.",
                    }
                });

                // Bind the donor ZIP field so when value is entered, errors can be cleared
                $('#Donor_dzip').bind('blur', function () {
                    // regex pattern for US Zip
                    var USzip_check = /^\d{5}(?:[-\s]\d{4})?$/;

                    // clear errors if ZIP is valid
                    if (USzip_check.test($("#Donor_dzip").val()) == true) {
                        $("#errorDonor_dzip").html('').prev();
                        $('#Donor_dzip').removeClass("error");
                        $("#Donor_dzip").rules("remove", "regex");
                    }

                }); // bind

                //////////////////////
                // Donor Phone
                /////////////////////

                // First check for error
                // regex pattern for US phone
                var USphone_check = /^\(?([0-9]{3})\)?[-]?([0-9]{3})[-]?([0-9]{4})$/;

                // clear errors if phone is valid
                if (((USphone_check.test($("#Donor_dphone").val()) == true) && $("#Donor_dphone").val().length == 12) || ($("#Donor_dphone").val().length == 0)) {
                    $("#errorDonor_dphone").html('').prev();
                    $('#Donor_dphone').removeClass("error");
                    $("#Donor_dphone").rules("remove", "regex");
                } else if ((USphone_check.test($("#Donor_dphone").val()) == false) || $("#Donor_dphone").val().length < 12) {
                    $("#errorDonor_dphone").html('<label class="error">Enter phone using format of 555-555-5555.</label><br />');
                    $("#Donor_dphone").addClass("error");

                }

                // Now, bind the donor phone field so when value is entered, errors can be cleared
                $('#Donor_dphone').bind('blur', function () {
                    if ($("#Donor_dcountry").val() == 'US') {

                        // regex pattern for US phone
                        var USphone_check = /^\(?([0-9]{3})\)?[-]?([0-9]{3})[-]?([0-9]{4})$/;

                        // clear errors if phone is valid
                        if ((USphone_check.test($("#Donor_dphone").val()) == true) && $("#Donor_dphone").val().length == 12) {
                            $("#errorDonor_dphone").html('').prev();
                            $('#Donor_dphone').removeClass("error");
                            $("#Donor_dphone").rules("remove", "regex");
                        } else if ((USphone_check.test($("#Donor_dphone").val()) == false) || $("#Donor_dphone").val().length < 12) {
                            $("#errorDonor_dphone").html('<label class="error">Enter phone using format of 555-555-5555.</label><br />');
                            $("#Donor_dphone").addClass("error");

                        }
                    } else if ($("#Donor_dcountry").val() !== 'US') {
                        $("#errorDonor_dphone").html('');
                        $('#Donor_dphone').removeClass("error");
                        $("#Donor_dphone").rules("remove", "regex");
                    }

                }); // bind

            } else if (this.value !== 'US') {


                $("#Donor_dphone").unmask("009-999-9999");
                //////////////////////
                // Donor ZIP field
                /////////////////////
                // clear requirements and error displays
                $("#Donor_dphone").unmask("009-999-9999")
                $("#errorDonor_dzip").html('');
                $('#Donor_dzip').removeClass("error");
                $("#Donor_dzip").rules("remove", "regex");

                //////////////////////
                // Donor Phone field
                /////////////////////
                $("#errorDonor_dphone").html('');
                $('#Donor_dphone').removeClass("error");
                $("#Donor_dphone").rules("remove", "regex");
                // clear requirements and error displays
                $("#errorDonor_dphone").html('');
            }



        });

        //////////////////////
        // My Card Section
        ////////////////////

        /////////////////////
        // Memorial Section
        ////////////////////
        function memorial_fields_toggle(read_only_bit) {
            if (read_only_bit == 1) {
                $('#Donor_mname').prop("readonly", true);
                $('#Donor_mnotify').prop("readonly", true);
                $('#Donor_maddress').prop("readonly", true);
                $('#Donor_mcity').prop("readonly", true);
                $('#Donor_mstate').prop("readonly", true);
                $('#Donor_mzip').prop("readonly", true);
                $('#Donor_ecardClass').prop("readonly", true);
                $('#Ecard_emailAddy').prop("readonly", true);
                $('#ecardToday1').prop("readonly", true);
                $('#ecardToday2').prop("readonly", true);
            } else if (read_only_bit == 0) {
                $('#Donor_mname').prop("readonly", false);
                $('#Donor_mnotify').prop("readonly", true);
                $('#Donor_maddress').prop("readonly", false);
                $('#Donor_mcity').prop("readonly", false);
                $('#Donor_mstate').prop("readonly", false);
                $('#Donor_mzip').prop("readonly", false);
                $('#Donor_ecardClass').prop("readonly", false);
                $('#Ecard_emailAddy').prop("readonly", false);
                $('#ecardToday1').prop("readonly", false);
                $('#ecardToday2').prop("readonly", false);

            }

        }  // end function

        function memorial_ecard_send_fields_toggle(read_only_bit) {
            if (read_only_bit == 1) {
                $('#Ecard_emailAddy').prop("readonly", true);
                $('#ecardToday1').prop('disabled', true);
                $('#ecardToday2').prop('disabled', true);
                $('#ecardDatepicker').prop("readonly", true);
                $('#ecardDesign1').prop('disabled', true);
                $('#ecardDesign2').prop('disabled', true);
                $('#ecardDesign3').prop('disabled', true);
                $('#ecardMsg').prop('readonly', true);
            } else if (read_only_bit == 0) {
                $('#Ecard_emailAddy').prop("readonly", false);
                $('#ecardToday1').prop("disabled", false);
                $('#ecardToday2').prop("disabled", false);
                $('#ecardDatepicker').prop("readonly", false);
                $('#ecardDesign1').prop('disabled', false);
                $('#ecardDesign2').prop('disabled', false);
                $('#ecardDesign3').prop('disabled', false);
                $('#ecardMsg').prop('readonly', false);
            }
        }

        function clear_all_memorial_values() {
            $("#Donor_mname").rules("remove", "required");
            $("#cRdbMemorial").removeAttr("checked");
            $("#cRdbHonor").removeAttr("checked");
            $('#Donor_memorial').val('');
            $('#Donor_mname').val('');
            $('#Donor_mnotify').val('');
            $('#Donor_maddress').val('');
            $('#Donor_mcity').val('');
            $('#Donor_mcountry:selected').val('').removeAttr('selected');
            sessionStorage.setItem('memorialCountry', '');
            $('#Donor_mstate').val('');
            sessionStorage.setItem('memorialState', '');
            $('#Donor_mzip').val('');


            $('#Ecard_classYear').val('');
            $("#sendEcard").removeAttr("checked");
            $('#Ecard_emailAddy').val('');
            $('#ecardToday1').val('');
            $('#ecardToday2').val('');
            $('#ecardDatepicker').val('');
            sessionStorage.setItem('ecard-datepicker', '');
            $('#ecardDesign1').prop("checked", true)
            $('#ecardDesign2').removeAttr("checked");
            $('#ecardDesign3').removeAttr("checked");
            $('#ecardMsg').val('');


            // hide memorial info fields
            $("#memorial_info_fields").hide();
            $("#memorial_ecard_fields").hide();
            $('#cRdbMemorial-remove').hide();
        }

        // Allow a user to remove memorial or honorary info if they use the  back button
        // if link is clicked, remove radio selection and hide all memorial info
        $('#cRdbMemorial-remove-radio').click(function () {


            // clear all memorial fields
            clear_all_memorial_values();

            // Hide the Memorial Personal Info fields
            $("#memorial_info_fields").hide();
            // uncheck other radio buttons
            $("#cRdbMemorial").removeAttr("checked");
            $("#cRdbHonor").removeAttr("checked");


        });

        // Initialize the fields that have class memorial-info to read only
        //memorial_fields_toggle(1);

        // If ether Memorial or Honorary radio button is checked
        $('input[type=radio][name=rdbMemorialHonorary]').change(function () {
            // Uncheck 'None' radio button
            $("#cRdbMemorial-remove-radio").removeAttr("checked");
            $("#memorial_info_fields").show();
            $("#memorial_ecard_fields").hide();

            $("#Donor_memorial").val($(this).val());

            // make eCard send fields readOnly
            //memorial_ecard_send_fields_toggle(1);
            if ((this.value == 'Memorial') || (this.value == 'Honorary')) {
                // show remove radio selection link
                $('#cRdbMemorial-remove').show();


                // if link is clicked, remove radio selection and hide all memorial info
                $('#cRdbMemorial-remove-radio').click(function () {


                    // clear all memorial fields
                    clear_all_memorial_values();

                    // Hide the Memorial Personal Info fields
                    $("#memorial_info_fields").hide();
                    // uncheck other radio buttons
                    $("#cRdbMemorial").removeAttr("checked");
                    $("#cRdbHonor").removeAttr("checked");

                });

                //alert("Memorial");
                //memorial_fields_toggle(0);

                // Add remove selection link to the right of the radio button value
                $('#cRdbMemorial-remove').show();

                // add error glow around input field and add red required asterisk to prev sibling label element
                if (!$("#Donor_mname").hasClass("error")) {
                    //$("#Donor_mname").append("<span class='red'>*</span>");
                }

                // Bind the memorial full name field so when value is entered, errors can be cleared
                $('#Donor_mname').bind('blur', function () {
                    //alert('blurred out of mname!');
                    // Make sure field has a value
                    if ($("#Donor_mname").val() !== '') {
                        $("#errorDonor_mname").html('');
                        $('#Donor_mname').removeClass("error").prev().remove("span");
                        $("#Donor_mname").rules("remove", "required");
                    } else if ($("#Donor_mname").val() == '') {
                        // Now make memorial full name required
                        $('#Donor_mname').rules("add", {
                            required: true,
                            messages: {
                                required: "This field is required.",
                            }
                        });
                        // Display error message

                        $("#errorDonor_mname").html('<label class="error">This field is required.</label><br />');
                        // add error glow around input field
                        $("#Donor_mname").addClass("error");
                        //alert('mname is null and a radio is checked');
                    }

                }); // bind

                // Now make memorial full name required for check when form is submitted if field isn't entered
                $('#Donor_mname').rules("add", {
                    required: true,
                    messages: {
                        required: "This field is required.",
                    }
                });
            }
        }); // memorial radio change

        /////////////////////////
        // Memorial Class Year
        ////////////////////////

        $('#Ecard_classYear').change(function () {
            $('#Ecard_classYear').bind('blur', function () {
                // regex pattern for year check
                var valid_year_check = /\b(18[7-9][0-9]|19[0-9][0-9]|20[0-9][0-9])\b/;

                // clear errors if class year is valid
                if (valid_year_check.test($("#Ecard_classYear").val()) == true) {
                    $("#errorEcard_classYear").html('').prev();
                    $('#Ecard_classYear').removeClass("error");
                    $("#Ecard_classYear").rules("remove", "regex", "range");
                } else if (valid_year_check.test($("#Ecard_classYear").val()) == false) {
                    $('#Ecard_classYear').rules("add", {
                        required: true,
                        regex: /\b(18[7-9][0-9]|19[0-9][0-9]|20[0-9][0-9])\b/,
                        messages: {
                            regex: "Please enter the class year.",
                        }
                    });
                    $("#errorEcard_classYear").html('<label class="error">Please enter the class year between 1870 and 2099.</label><br />');
                    $("#Ecard_classYear").addClass("error");
                }


            });
        });


        //////////////////////
        // Memorial Country field
        ////////////////////

        $("#Donor_mcountry").change(function () {
            sessionStorage.setItem('memorialCountry', this.value);
            var mcntry = sessionStorage.getItem('memorialCountry');
            //alert("value of mcntry is: " + mcntry);

            if (this.value == 'US') {
                //////////////////////
                // Memorial ZIP field
                /////////////////////
                $('#Donor_mzip').rules("add", {
                    regex: /^\d{5}(?:[-\s]\d{4})?$/,
                    messages: {
                        regex: "Please enter US ZIP in proper 5 or 9 digit format.",
                    }
                });
                $("#errorDonor_mzip").html('<label class="error">US ZIP code is required.</label><br />');
                $("#Donor_mzip").addClass("error");

                // clear errors if ZIP is NULL
                if ($('#Donor_mzip').val() == '') {
                    $("#errorDonor_mzip").html('').prev();
                    $('#Donor_mzip').removeClass("error");
                    $("#Donor_mzip").rules("remove", "regex");
                }

                // Bind the memorial email field so when value is entered, errors can be cleared
                $('#Donor_mzip').bind('blur', function () {
                    // regex pattern for US Zip
                    var USzip_check = /^\d{5}(?:[-\s]\d{4})?$/;

                    // clear errors if ZIP is valid
                    if (USzip_check.test($("#Donor_mzip").val()) == true) {
                        $("#errorDonor_mzip").html('').prev();
                        $('#Donor_mzip').removeClass("error");
                        $("#Donor_mzip").rules("remove", "regex");
                    }

                    // clear errors if ZIP is NULL
                    if ($('#Donor_mzip').val() == '') {
                        $("#errorDonor_mzip").html('').prev();
                        $('#Donor_mzip').removeClass("error");
                        $("#Donor_mzip").rules("remove", "regex");
                    }

                }); // bind



            } else if (this.value !== 'US') {
                //////////////////////
                // Memorial ZIP field
                /////////////////////

                // clear requirements and error displays
                $("#errorDonor_mzip").html('');
                $('#Donor_mzip').removeClass("error");
                $("#Donor_mzip").rules("remove", "regex");
            }
        });

        //////////////////////
        // Memorial State field
        /////////////////////
        $("#Donor_mstate").change(function () {

            sessionStorage.setItem('memorialState', this.value);
            var mst = sessionStorage.getItem('memorialState');
            //alert("value of mst is: " + mst);

        });

        //////////////////////
        // Memorial Send Ecard
        /////////////////////

        // First check to see if recurring checkbox is already checked
        if ($('#sendEcard').is(':checked') == true) {

            // Firstly, show hidden fields
            $("#memorial_ecard_fields").show();

            // Initialize bootstrap datepicker calendar for default select today and no past dates allowed
            var date = new Date();
            date.setDate(date.getDate());
            $('#ecardDate').datepicker({
                startDate: date,
                autoclose: true
            });

            $('#ecardDatepicker').bind('blur', function () {
                // Set jQuery SESSION var
                sessionStorage.setItem('ecard-datepicker', this.value);
                var edpckr = sessionStorage.getItem('ecard-datepicker');

            });

        }

        $('#sendEcard:checkbox').change(function () {
            // this represents the checkbox that was checked
            if ($(this).is(":checked")) {
                // show contingent eCard fields
                $("#memorial_ecard_fields").show();
                // toggle them so readOnly is off
                memorial_ecard_send_fields_toggle(0);

                // add dynamic validate rules for each input and do manual management, as well

                ////////////////
                // Email field
                ///////////////

                // Bind the memorial email field so when value is entered, errors can be cleared
                $('#Ecard_emailAddy').bind('blur', function () {
                    // regex pattern for email
                    var email_check = /^[A-Z0-9._%+-]+@[A-Z0-9.-]+\.[A-Z]{2,6}$/i;

                    // Make sure field has a value
                    if (email_check.test($("#Ecard_emailAddy").val()) == true) {
                        $("#errorEcard_emailAddy").html('');
                        $('#Ecard_emailAddy').removeClass("error");
                        $("#Ecard_emailAddy").rules("remove", "required", "email");
                    } else {
                        $('#Ecard_emailAddy').rules("add", {
                            required: true,
                            email: true,
                            messages: {
                                required: "This field is required.",
                                email: "Email address must be valid.",
                            }
                        });
                        $("#errorEcard_emailAddy").html('<label class="error">Email address field is required.</label><br />').prev();
                        // add error glow around input field and add red required asterisk to prev sibling label element, if not already there
                        $("#Ecard_emailAddy").addClass("error");

                    }
                }); // bind

                ////////////////
                // Bootstrap datepicker field
                ///////////////

                /* !!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!

                NEEDS TO BE FIXED!

                    !!!!!! Make sure that calendar popup works on 'page back'
                    !!!!!  Make sure that contingent fields show and hide if send eCard checkbox toggles
                    !!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!

                */

                // Initialize bootstrap datepicker calendar for default select today and no past dates allowed
                var date = new Date();
                date.setDate(date.getDate());
                $('#ecardDate').datepicker({
                    startDate: date,
                    autoclose: true
                });
                $('#ecardDate').datepicker("setDate", new Date());


                // Bind the datepicker field so when value is entered, errors can be cleared
                $('#ecardDatepicker').bind('blur', function () {
                    // Set jQuery SESSION var
                    sessionStorage.setItem('ecard-datepicker', this.value);
                    var edpckr = sessionStorage.getItem('ecard-datepicker');


                    //alert('calendar has changed');
                    // Make sure field has a value
                    if ($("#ecardDatepicker").val() == '') {
                        $('#ecardDatepicker').rules("add", {
                            required: true,
                            messages: {
                                required: "Please select a date when the ecard will be emailed.",
                            }
                        });
                        $("#errorecardDate").html('<label class="error">Date field is required.</label><br />').prev();
                        //$("#ecardDate").addClass("error").prev().append("<span class='red'>*</span>");
                    } else if ($("#ecardDatepicker").val() !== '') {
                        $("#errorecardDate").html('');
                        $('#ecardDate').removeClass("error").prev().remove("span");
                        $("#ecardDate").rules("remove", "required", "email");
                    }
                }); // bind


                // preselect the first radio button eCard design
                $('.ecard_design:first').attr('checked', true);
                $("#Ecard_design").val('1');

                $('input[type=radio][name=ecardDesign]').change(function () {
                    $("#Ecard_design").val($(this).val());
                });

                // Make email required if field not entered when form submits
                $('#Ecard_emailAddy').rules("add", {
                    required: true,
                    email: true,
                    messages: {
                        required: "This field is required.",
                        email: "Email address must be valid.",
                    }
                });


            } else {
                $("#memorial_ecard_fields").hide();
                memorial_ecard_send_fields_toggle(1);
                // clear all fields of required spans and error messages and error input box glows
                $("#errorEcard_emailAddy").html('');
                $('#Ecard_emailAddy').removeClass("error").val('');
                $("#Ecard_emailAddy").rules("remove", "required");
                // clear all eCard design selections
                $('.ecard_design:first').attr('checked', false);
                $('.ecard_design:second').attr('checked', false);
                $('.ecard_design:third').attr('checked', false);
            }

        });

        // create dynamic tabindexing to tab from input field to input field
        $(":input, label[id^='amount'], a.collapse_accordion, #cRdbMemorial-remove").each(function (i) { $(this).attr('tabindex', i + 1); });


        $("#form1").submit(function () {

            var problems = 0;

            if ($('#Donor_giftamount').val() == "") {

                problems = 1;

            }

            if ($("#Donor_is_business_card").val() == '' || $("#Donor_is_business_card").val() == null) {

                $('#errorrdbbusinesscard').addClass("error");
                $("#errorrdbbusinesscard").html('<label class="error">This field is required. Please select Yes or No for if this is a business or company credit card.</label><br />');
                problems = 1;
            }

            if (problems == 1) {
                return false;
            }

        });


        //$('#form1').formcache();

        //window.onunload = function () {
        //    $('#form1').formcache('clear');
        //}



    });
   </script>
  </div>
