   <script type="text/javascript">
    $('#form1').validate({
        onfocusout: function (element) {
            // forces focus on error input field

            if (!this.element(element)) {
                //$(element).focus();
            }


        },
        invalidHandler: function (event, validator, element) {
            if (validator.numberOfInvalids() > 0) {
                validator.showErrors();
                //alert("Number of errors that need to be corrected: " + validator.numberOfInvalids());
                alert("Oops!  We need a few more details to complete your gift.  Please look for the field(s) highlighted in red and enter the required information.");
            }
            // Open accordion tab with errors
            if ($("label.error:contains(This field is required)")) {
                $('#form1').find('label.error').not('label.error.valid').parents(':not(.panel-collapse.collapse.in)').collapse('show');
            }
        },
        ignore: [],
        rules: {
            "Donor.giftDesignation": {
                required: true
            },
            "Donor.giftamount": {
                required: true
            },
            "Donor.title": {
                required: true
            },
            "Donor.firstName": {
                required: true,
                regex: /^[a-zA-Z ,.'-]+$/i,
            },
            "Donor.lastName": {
                required: true,
                regex: /^[a-zA-Z ,.'-]+$/i,
            },
            "Donor.address1": {
                required: true,
            },
            "Donor.dcity": {
                required: true,
                regex: /^[a-zA-Z ,.'-]+$/i,
            },
            "Donor.dstate": {
                required: true
            },
            "Donor.dzip": {
                required: true,
                //regex: /^\d{5}(?:[-\s]\d{4})?$/,
                regex: /^\d{5}((-)?\d{4})?$/
            },
            "Donor.demail": {
                required: true,
                email: true
            },
            "Donor.dphone": {
                required: true,
                regex: /^[0-9-+]+$/,
            },
            "Donor.dcountry": {
                required: true
            }

        },
        messages: {
            "Donor.giftDesignation": {
                required: 'What would you like your gift to support?',
            },
            "Donor.giftamount": {
                required: 'Please select a gift donation button.',
            },
            "Donor.title": {
                required: 'This field is required.',
            },
            "Donor.firstName": {
                required: 'This field is required.',
                regex: 'Please only use letters, spaces, dashes, and apostrophes.',
            },
            "Donor.lastName": {
                required: 'This field is required.',
                regex: 'Please only use letters, spaces, dashes, and apostrophes.',
            },
            "Donor.address1": {
                required: 'This field is required.',
            },
            "Donor.dcity": {
                required: 'This field is required.',
                regex: 'Please only use letters, spaces, dashes, and apostrophes.',
            },
            "Donor.dzip": {
                required: 'This field is required.',
                regex: 'Please enter your zipcode using 5 or 9 digit format.',
            },
            "Donor.dphone": {
                required: 'This field is required.',
                regex: 'Please use the format, 555-555-5555.',
            },
            "Donor.dstate": {
                required: 'This field is required.',
            },
            "Donor.dcountry": {
                required: 'This field is required.',
            },
            "Donor.demail": {
                required: 'This field is required.',
            }
        },
        errorPlacement: function ($error, $element) {
            var name = $element.attr("name");
            var id = $element.attr("id");

            $("#error" + id).append($error);

        }
    });
   </script>
